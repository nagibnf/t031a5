{
  // Configuração para G1 com Câmera Logitech USB
  // Otimizada para testes funcionais sem RealSense/LiDAR
  
  "name": "G1 Logitech Camera System",
  "hertz": 8, // Frequência otimizada para câmera USB
  "system_prompt_base": "Você é um assistente robótico G1 usando câmera Logitech USB para visão computacional. Interaja de forma natural através de voz, gestos e análise visual.",
  
  "development": {
    "websim_enabled": true,
    "debug_mode": false,
    "hot_reload": false
  },
  
  "g1_specific": {
    "robot_type": "unitree_g1",
    "capabilities": [
      "bipedal_locomotion",
      "arm_manipulation", 
      "computer_vision_usb",
      "audio_processing",
      "conversational_ai",
      "emotional_expression"
    ],
    "safety_mode": true,
    "camera_type": "logitech_usb"
  },
  
  // Sistema de Conversação Integrado
  "conversation_engine": {
    "enabled": true,
    "enable_vision_context": true,
    "enable_gesture_sync": true,
    "enable_emotion_detection": true,
    "conversation_timeout": 30.0,
    "response_delay": 0.3
  },
  
  // Inputs Otimizados para Câmera Logitech
  "agent_inputs": {
    "G1Voice": {
      "enabled": true,
      "language": "pt-BR",
      "sensitivity": 0.8,
      "noise_suppression": true,
      "continuous_listening": true,
      "wake_word": "G1",
      "mock_mode": false,
      "microphone_index": 0,
      "sample_rate": 16000,
      "chunk_size": 1024
    },
    "G1Vision": {
      "enabled": true,
      "camera_index": 0,           // Câmera Logitech USB
      "resolution": [1280, 720],   // HD para Logitech
      "fps": 30,                   // FPS padrão Logitech
      "detection_confidence": 0.6, // Ajustado para câmera USB
      "enable_face_detection": true,
      "enable_object_detection": true,
      "enable_motion_detection": true,
      "enable_ocr": true,          // OCR útil para testes
      "mock_mode": false,          // USAR CÂMERA REAL!
      "face_recognition_distance": 0.8, // Ajustado para Logitech
      "object_classes": ["person", "chair", "table", "book", "phone", "laptop", "cup"],
      "camera_settings": {
        "autofocus": true,
        "auto_exposure": true,
        "brightness": 0.5,
        "contrast": 0.5,
        "saturation": 0.5
      }
    },
    "G1State": {
      "enabled": true,
      "update_interval": 0.5,
      "enable_joint_monitoring": true,
      "enable_motor_monitoring": true,
      "enable_battery_monitoring": true,
      "enable_thermal_monitoring": true,
      "enable_safety_monitoring": true,
      "mock_mode": false
    },
    "G1Sensors": {
      "enabled": true,
      "update_interval": 0.1,
      "mock_mode": false
    }
  },
  
  // Actions Otimizadas
  "agent_actions": {
    "G1Speech": {
      "enabled": true,
      "language": "pt-BR",
      "voice_type": "friendly",
      "speaking_rate": 1.0,
      "volume": 0.8,
      "emotion_modulation": true,
      "mock_mode": false,
      "engine": "espeak"
    },
    "G1Emotion": {
      "enabled": true,
      "led_brightness": 0.8,
      "transition_time": 0.3,
      "emotion_mapping": {
        "happy": [0, 255, 0],
        "focused": [255, 255, 255],
        "neutral": [128, 128, 128]
      },
      "mock_mode": false
    },
    "G1Movement": {
      "enabled": true,
      "max_speed": 1.0,            // Velocidade conservadora
      "max_turn_speed": 0.5,
      "safety_distance": 1.2,      // Distância aumentada sem LiDAR
      "enable_obstacle_detection": false, // Desabilitado sem LiDAR
      "enable_posture_control": true,
      "enable_navigation": false,   // Navegação limitada sem LiDAR
      "conversational_gestures": true,
      "head_tracking": true,
      "mock_mode": false
    },
    "G1Arms": {
      "enabled": true,
      "max_force": 25.0,           // Força reduzida para segurança
      "max_speed": 0.8,
      "enable_force_control": true,
      "enable_collision_detection": true,
      "enable_gestures": true,
      "gesture_library": [
        "wave", "point", "thumbs_up", "greeting", "explanation"
      ],
      "mock_mode": false
    },
    "G1Audio": {
      "enabled": true,
      "sample_rate": 44100,
      "channels": 2,
      "default_volume": 0.7,
      "enable_effects": true,
      "mock_mode": false
    }
  },
  
  // Sistema de Fusão Otimizado
  "fuser": {
    "type": "multimodal",
    "config": {
      "fusion_strategy": "weighted",
      "input_weights": {
        "G1Voice": 0.4,
        "G1Vision": 0.35,          // Peso aumentado para câmera
        "G1State": 0.15,
        "G1Sensors": 0.1
      },
      "confidence_threshold": 0.4,
      "temporal_window": 1.5
    }
  },
  
  // LLM para Conversação
  "llm": {
    "provider": "openai",
    "model": "gpt-4o-mini",
    "api_key": "${OPENAI_API_KEY}",
    "max_tokens": 150,
    "temperature": 0.6,
    "context_integration": true,
    "conversation_memory": 5,
    "fallback": "mock",
    "rate_limit": {
      "requests_per_minute": 60,
      "tokens_per_minute": 8000
    }
  },
  
  // G1 Controller - SEM LiDAR
  "g1_controller": {
    "enabled": true,
    "mock_mode": false,
    "interface": {
      "robot_ip": "192.168.1.120",
      "robot_port": 8080,
      "timeout": 3.0,
      "retry_attempts": 3,
      "safety_mode": true,
      "emergency_stop_enabled": true
    },
    "movement_limits": {
      "max_speed": 1.0,
      "max_acceleration": 0.5,
      "workspace_bounds": {
        "x": [-2.0, 2.0],
        "y": [-2.0, 2.0],
        "z": [0.0, 2.0]
      }
    },
    "safety_features": {
      "lidar_available": false,
      "camera_based_safety": true,
      "manual_control_override": true
    }
  },
  
  // WebSim para Monitoramento
  "websim": {
    "enabled": true,
    "host": "0.0.0.0",
    "port": 8080,
    "debug": false,
    "auto_reload": false,
    "static_dir": "static",
    "templates_dir": "templates",
    "max_connections": 5
  },
  
  // Logging Otimizado
  "logging": {
    "level": "INFO",
    "file": "logs/g1_logitech.log",
    "log_format": "production",
    "enable_metrics": true,
    "enable_performance_monitoring": true,
    "camera_logging": true
  },
  
  // Métricas Específicas
  "metrics": {
    "enabled": true,
    "collection_interval": 2.0,
    "export_format": "json",
    "export_file": "logs/g1_logitech_metrics.json",
    "performance_alerts": {
      "response_time_threshold": 2.5,
      "error_rate_threshold": 0.05,
      "camera_fps_threshold": 25
    }
  }
}
