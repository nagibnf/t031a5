{
  "name": "G1 Basic Test",
  "hertz": 2,
  "development": {
    "websim_enabled": false,
    "mock_mode": true
  },
  "agent_inputs": {
    "g1_voice": {
      "enabled": true,
      "type": "mock",
      "config": {
        "sample_rate": 16000,
        "channels": 1
      }
    },
    "g1_vision": {
      "enabled": true,
      "type": "mock",
      "config": {
        "resolution": "640x480",
        "fps": 30
      }
    }
  },
  "agent_actions": {
    "g1_speech": {
      "enabled": true,
      "type": "mock",
      "config": {
        "voice": "default",
        "speed": 1.0
      }
    },
    "g1_movement": {
      "enabled": true,
      "type": "mock",
      "config": {
        "max_speed": 0.5
      }
    }
  },
  "fuser": {
    "type": "priority",
    "config": {
      "voice_priority": 10,
      "vision_priority": 5,
      "sensor_priority": 3
    }
  },
  "llm": {
    "provider": "mock",
    "config": {
      "model": "gpt-4o-mini",
      "max_tokens": 1000,
      "temperature": 0.7
    }
  },
  "g1_controller": {
    "enabled": false
  },
  "websim": {
    "enabled": false
  },
  "logging": {
    "level": "INFO",
    "file": "logs/g1_basic.log"
  }
}
