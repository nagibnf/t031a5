{
  // Configuração de Produção - G1 Sistema AI Multimodal
  // Otimizada para performance e estabilidade em produção
  
  "name": "G1 Production System",
  "hertz": 10, // Frequência otimizada para produção
  "system_prompt_base": "Você é um assistente robótico G1 profissional, capaz de interagir de forma natural através de visão, voz, gestos e movimentos precisos.",
  
  "development": {
    "websim_enabled": true,
    "debug_mode": false,
    "hot_reload": false
  },
  
  "g1_specific": {
    "robot_type": "unitree_g1",
    "capabilities": [
      "bipedal_locomotion",
      "arm_manipulation", 
      "computer_vision",
      "audio_processing",
      "conversational_ai",
      "emotional_expression"
    ],
    "safety_mode": true,
    "emergency_stop_enabled": true
  },
  
  // Sistema de Conversação Integrado
  "conversation_engine": {
    "enabled": true,
    "enable_vision_context": true,
    "enable_gesture_sync": true,
    "enable_emotion_detection": true,
    "conversation_timeout": 30.0,
    "response_delay": 0.3
  },
  
  // Inputs Otimizados para Produção
  "agent_inputs": {
    "G1Voice": {
      "enabled": true,
      "language": "pt-BR",
      "sensitivity": 0.8,
      "noise_suppression": true,
      "continuous_listening": true,
      "wake_word": "G1",
      "mock_mode": false,
      "microphone_index": 0,
      "sample_rate": 16000,
      "chunk_size": 1024
    },
    "G1Vision": {
      "enabled": true,
      "camera_index": 0,
      "resolution": [1280, 720],
      "fps": 30,
      "detection_confidence": 0.7,
      "enable_face_detection": true,
      "enable_object_detection": true,
      "enable_motion_detection": true,
      "mock_mode": false,
      "face_recognition_distance": 0.6
    },
    "G1State": {
      "enabled": true,
      "update_interval": 0.5,
      "enable_joint_monitoring": true,
      "enable_motor_monitoring": true,
      "enable_battery_monitoring": true,
      "enable_thermal_monitoring": true,
      "enable_safety_monitoring": true,
      "mock_mode": false
    },
    "G1Sensors": {
      "enabled": true,
      "update_interval": 0.1,
      "mock_mode": false
    }
  },
  
  // Actions Otimizadas
  "agent_actions": {
    "G1Speech": {
      "enabled": true,
      "language": "pt-BR",
      "voice_type": "professional",
      "speaking_rate": 1.0,
      "volume": 0.8,
      "emotion_modulation": true,
      "mock_mode": false,
      "engine": "espeak"
    },
    "G1Emotion": {
      "enabled": true,
      "led_brightness": 0.8,
      "transition_time": 0.3,
      "emotion_mapping": {
        "happy": [0, 255, 0],
        "focused": [255, 255, 255],
        "neutral": [128, 128, 128]
      },
      "mock_mode": false
    },
    "G1Movement": {
      "enabled": true,
      "max_speed": 1.2,
      "max_turn_speed": 0.6,
      "safety_distance": 1.0,
      "enable_obstacle_detection": true,
      "enable_posture_control": true,
      "mock_mode": false
    },
    "G1Arms": {
      "enabled": true,
      "max_force": 30.0,
      "max_speed": 1.0,
      "enable_force_control": true,
      "enable_collision_detection": true,
      "enable_gestures": true,
      "gesture_library": [
        "wave", "point", "thumbs_up", "greeting", "explanation"
      ],
      "mock_mode": false
    },
    "G1Audio": {
      "enabled": true,
      "sample_rate": 44100,
      "channels": 2,
      "default_volume": 0.7,
      "enable_effects": true,
      "mock_mode": false
    }
  },
  
  // Sistema de Fusão Otimizado
  "fuser": {
    "type": "multimodal",
    "config": {
      "fusion_strategy": "weighted",
      "input_weights": {
        "G1Voice": 0.4,
        "G1Vision": 0.3,
        "G1State": 0.2,
        "G1Sensors": 0.1
      },
      "confidence_threshold": 0.4,
      "temporal_window": 1.5
    }
  },
  
  // LLM para Produção
  "llm": {
    "provider": "openai",
    "model": "gpt-4o-mini",
    "api_key": "${OPENAI_API_KEY}",
    "max_tokens": 150,
    "temperature": 0.6,
    "context_integration": true,
    "conversation_memory": 5,
    "fallback": "mock",
    "rate_limit": {
      "requests_per_minute": 60,
      "tokens_per_minute": 8000
    }
  },
  
  // G1 Controller - PRODUÇÃO
  "g1_controller": {
    "enabled": true,
    "mock_mode": false,
    "interface": {
      "robot_ip": "192.168.1.120",
      "robot_port": 8080,
      "timeout": 3.0,
      "retry_attempts": 3,
      "safety_mode": true,
      "emergency_stop_enabled": true
    },
    "movement_limits": {
      "max_speed": 1.2,
      "max_acceleration": 0.8,
      "workspace_bounds": {
        "x": [-3.0, 3.0],
        "y": [-3.0, 3.0],
        "z": [0.0, 2.5]
      }
    }
  },
  
  // WebSim para Monitoramento
  "websim": {
    "enabled": true,
    "host": "0.0.0.0",
    "port": 8080,
    "debug": false,
    "auto_reload": false,
    "static_dir": "static",
    "templates_dir": "templates",
    "max_connections": 5
  },
  
  // Logging Otimizado
  "logging": {
    "level": "INFO",
    "file": "logs/g1_production.log",
    "log_format": "production",
    "enable_metrics": true,
    "enable_performance_monitoring": true
  },
  
  // Métricas de Produção
  "metrics": {
    "enabled": true,
    "collection_interval": 2.0,
    "export_format": "json",
    "export_file": "logs/g1_production_metrics.json",
    "performance_alerts": {
      "response_time_threshold": 2.0,
      "error_rate_threshold": 0.05
    }
  }
}
