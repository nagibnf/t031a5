    "hot_reload": false
  },
  
  // G1 Espec√≠fico - Configura√ß√µes do rob√¥ f√≠sico
  "g1_specific": {
    "robot_ip": "192.168.123.161",
    "jetson_ip": "192.168.123.164", 
    "interface": "eth0",
    "robot_type": "unitree_g1",
    "safety_mode": true,
